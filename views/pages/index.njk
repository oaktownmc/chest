{% extends "templates/base.njk" %}
{% from "../components/nav.njk" import nav %}

{% block head %}
  <title>oak chest</title>
  <meta property="og:title" content="oak chest | home" />
{% endblock %}

{% block body %}
  <div class="container">
    <img src="/assets/oakchest.png" alt="oak chest" class="logo" />
    <form id="uploadForm">
      <label id="dropzone">
        <input type="file" id="fileInput" name="file" />
        <div id="dropText">Drag files here or click to upload</div>
      </label>
      <div class="publicCheckbox"><label><input type="checkbox" name="publicChest" id="publicChest"> Add to the public chest?</label></div>
      <button style="width: 200px; height: 50px" class="serverButton" type="submit">Upload</button>
    </form>
    <div id="result"></div>
    {{ nav("home") }}
  </div>
  <script src="/assets/script.js"></script>
{% endblock %}
